resource "aws_security_group" "api-sg" {
  name        = "${var.profile_name}-api-sg"
  description = "Allow all outbound traffic and inbound 22/80"
  tags        = { Name = "${var.profile_name}-api-sg" }

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}
